{
  "name": "@basement/api",
  "version": "1.0.0",
  "private": true,
  "main": "./src/server.ts",
  "types": "./dist/src/server.d.ts",
  "exports": {
    ".": {
      "types": "./dist/src/server.d.ts"
    },
    "./types": {
      "types": "./dist/src/types.d.ts",
      "import": "./src/types.d.ts"
    }
  },
  "scripts": {
    "dev": "bun run --watch src/server.ts",
    "build": "tsc --emitDeclarationOnly --outDir dist",
    "start": "bun run src/server.ts",
    "lint": "biome check .",
    "lint:fix": "biome check --write .",
    "format": "biome format --write .",
    "type-check": "tsc --noEmit",
    "db:generate": "bunx dotenvx run -f ../../.env -- drizzle-kit generate",
    "db:migrate": "bunx dotenvx run -f ../../.env -- drizzle-kit migrate",
    "db:push": "bunx dotenvx run -f ../../.env -- drizzle-kit push",
    "db:studio": "bunx dotenvx run -f ../../.env -- drizzle-kit studio"
  },
  "dependencies": {
    "@basement/validators": "workspace:*",
    "@dotenvx/dotenvx": "catalog:",
    "@elysiajs/cors": "1.4.0",
    "@elysiajs/swagger": "1.3.1",
    "better-auth": "catalog:",
    "drizzle-orm": "^0.44.7",
    "elysia": "1.4.19",
    "elysia-helmet": "^3.0.0"
  },
  "devDependencies": {
    "@libsql/client": "^0.15.15",
    "@types/bun": "^1.3.5",
    "@types/ms": "catalog:",
    "@types/node": "catalog:",
    "drizzle-kit": "^0.31.8",
    "typescript": "catalog:"
  }
}
