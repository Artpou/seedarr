{
  "name": "@basement/api",
  "version": "1.0.0",
  "private": true,
  "main": "./src/server.ts",
  "types": "./dist/src/server.d.ts",
  "exports": {
    ".": {
      "types": "./dist/src/server.d.ts"
    },
    "./types": {
      "types": "./dist/src/types.d.ts",
      "import": "./src/types.d.ts"
    }
  },
  "scripts": {
    "dev": "bun run --watch src/server.ts",
    "build": "tsc --emitDeclarationOnly --outDir dist",
    "start": "bun run src/server.ts",
    "lint": "biome check .",
    "lint:fix": "biome check --write .",
    "format": "biome format --write .",
    "type-check": "tsc --noEmit",
    "db:migrate": "bunx dotenvx run -f ../../.env -- drizzle-kit migrate",
    "db:generate": "bunx dotenvx run -f ../../.env -- drizzle-kit generate",
    "db:studio": "bunx dotenvx run -f ../../.env -- drizzle-kit studio",
    "db:seed": "bunx dotenvx run -f ../../.env -- bun src/db/seed.ts"
  },
  "dependencies": {
    "@basement/validators": "workspace:*",
    "@bogeychan/elysia-logger": "^0.1.10",
    "@dotenvx/dotenvx": "catalog:",
    "@elysiajs/cors": "1.4.0",
    "@elysiajs/swagger": "1.3.1",
    "basic-ftp": "^5.0.5",
    "better-auth": "catalog:",
    "drizzle-orm": "^0.44.7",
    "elysia": "1.4.16",
    "elysia-helmet": "^3.0.0",
    "logixlysia": "^5.3.0",
    "zod": "catalog:"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "@types/ms": "catalog:",
    "@types/node": "catalog:",
    "drizzle-kit": "^0.30.0",
    "tsx": "catalog:",
    "typescript": "catalog:"
  }
}
