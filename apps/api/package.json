{
  "name": "@basement/api",
  "version": "1.0.0",
  "private": true,
  "main": "./src/server.ts",
  "types": "./dist/src/server.d.ts",
  "exports": {
    ".": {
      "types": "./dist/src/server.d.ts"
    },
    "./types": {
      "types": "./dist/src/types.d.ts"
    }
  },
  "scripts": {
    "dev": "tsx watch src/server.ts",
    "build": "tsc --emitDeclarationOnly --outDir dist",
    "start": "node --loader tsx src/server.ts",
    "lint": "biome check .",
    "lint:fix": "biome check --write .",
    "format": "biome format --write .",
    "type-check": "tsc --noEmit",
    "db:generate": "pnpx @dotenvx/dotenvx run -f ../../.env -- drizzle-kit generate",
    "db:migrate": "pnpx @dotenvx/dotenvx run -f ../../.env -- drizzle-kit migrate",
    "db:push": "pnpx @dotenvx/dotenvx run -f ../../.env -- drizzle-kit push",
    "db:studio": "pnpx @dotenvx/dotenvx run -f ../../.env -- drizzle-kit studio"
  },
  "dependencies": {
    "@dotenvx/dotenvx": "^1.38.0",
    "@hono/node-server": "^1.14.0",
    "@hono/zod-validator": "^0.4.1",
    "@libsql/client": "^0.15.15",
    "drizzle-orm": "^0.44.7",
    "drizzle-zod": "^0.6.0",
    "fluent-ffmpeg": "^2.1.3",
    "hono": "^4.7.9",
    "iconv-lite": "^0.7.1",
    "ms": "^2.1.3",
    "parse-torrent-title": "^2.1.0",
    "webtorrent": "2.8.5",
    "zod": "^3.24.1"
  },
  "devDependencies": {
    "@types/fluent-ffmpeg": "^2.1.27",
    "@types/iconv-lite": "^0.0.1",
    "@types/ms": "^2.1.0",
    "@types/node": "^24.10.0",
    "@types/webtorrent": "^0.110.1",
    "drizzle-kit": "^0.31.8",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3"
  }
}
