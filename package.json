{
  "name": "basement",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "dev": "pnpm --parallel --filter \"@basement/*\" dev",
    "dev:api": "pnpm --filter @basement/api dev",
    "dev:web": "pnpm --filter web dev",
    "build": "pnpm --filter @basement/api build && pnpm --filter web build",
    "lint": "pnpm --filter @basement/api lint && pnpm --filter web lint",
    "lint:fix": "pnpm --filter @basement/api lint:fix && pnpm --filter web lint:fix",
    "type-check": "pnpm --filter @basement/api build && pnpm --filter @basement/api type-check && pnpm --filter web type-check",
    "check": "pnpm run lint:fix && pnpm run type-check && pnpm run lint",
    "format": "pnpm --filter @basement/api format && pnpm --filter web format",
    "db:generate": "pnpm --filter @basement/api db:generate",
    "db:migrate": "pnpm --filter @basement/api db:migrate",
    "db:push": "pnpm --filter @basement/api db:push",
    "db:studio": "pnpm --filter @basement/api db:studio",
    "prepare": "husky"
  },
  "devDependencies": {
    "@biomejs/biome": "2.3.5",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.6"
  },
  "packageManager": "pnpm@9.15.3",
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=9.0.0"
  },
  "lint-staged": {
    "*.{ts,tsx,js,jsx}": [
      "biome check --write --files-ignore-unknown=true --no-errors-on-unmatched"
    ],
    "*.{json,md}": [
      "biome format --write --files-ignore-unknown=true --no-errors-on-unmatched"
    ]
  }
}
